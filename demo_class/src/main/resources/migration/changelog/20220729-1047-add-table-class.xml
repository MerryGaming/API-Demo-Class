<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="20220729-1047-add-table-class" author="YaLynk" >
        <createTable tableName="class_room">
            <column name="id_class" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_class_id_class"/>
            </column>
            <column name="name_class" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="department" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="training_system" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="year_of_admission" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="number_student" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="id_department" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="student">
            <column name="id_student" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="surname_and_cushion" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="sex" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="place_of_birth" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="id_class" type="int" autoIncrement="true">
                <constraints foreignKeyName="pk_class_id_class"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>